# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Flight routes
GET /flights/addFlight  controllers.HomeController.goToAddFlight
+nocsrf
POST /flights/:id  controllers.FlightController.delete(id: Long)
+nocsrf
POST /flights controllers.FlightController.create
+nocsrf
GET     /:sortBy/:column     controllers.FlightController.sortedFlights(sortBy: String, column: String)
+nocsrf
GET     /filter     controllers.FlightController.filterFlights(planeId: Option[Long], departureAirportId: Option[Long], arrivalAirportId: Option[Long], status: Option[String])


# Airport routes
GET /airports/addAirport  controllers.HomeController.goToAddAirport
+nocsrf
POST /airports/:id  controllers.AirportController.delete(id: Long)
+nocsrf
POST /airports controllers.AirportController.create

# Plane routes
GET /planes/addPlane  controllers.HomeController.goToAddPlane
+nocsrf
POST /planes/:id  controllers.PlaneController.delete(id: Long)
+nocsrf
POST /planes controllers.PlaneController.create

